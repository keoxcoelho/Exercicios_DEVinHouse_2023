// exemplo de CommonJS (módulos)
// qual a vantagem de usar? 
// 1 - modularização do código
// 2 - reutilização do código
// 3 - organização do código
// escrever dentro do scrip do html 'type="module'
// importando o modulo
export function sayHi(user) { //direciona de qual arquivo importar
    alert('Hello, ${user}!');}
// exportando o modulo
import {sayHi} from './say.js'; //direciona de qual arquivo exportar
alert(sayHi); // Hello, John!









