let quantidadeFuncionarios = parseInt(prompt("Informe a quantidade de funcionários:"));
let horasTrabalhadas = parseFloat(prompt("Informe a quantidade de horas trabalhadas:"));
let valorHora = parseFloat(prompt("Informe o valor da hora de trabalho:"));

let valorTotal = quantidadeFuncionarios * horasTrabalhadas * valorHora;

console.log("O valor total da folha de pagamento é: R$" + valorTotal.toFixed(2));

//Neste código, utilizei a função prompt para solicitar ao usuário a quantidade de funcionários, a quantidade de horas trabalhadas e o valor da hora de trabalho. Em seguida, calculamos o valor total da folha de pagamento multiplicando a quantidade de funcionários pelas horas trabalhadas e pelo valor da hora.
//Por fim, usei console.log para exibir o valor total da folha de pagamento na saída do console, formatado com duas casas decimais utilizando o método toFixed(2).